* {
	font-size: 20px;
	font-family: AnonymicePro Nerd Font, monospace;
}

window#waybar {
	background: #{{base01-hex}};
  opacity: 0.9;
	color: #{{base05-hex}};
}

#custom-right-arrow-dark,
#custom-left-arrow-dark {
	color: #{{base04-hex}};
}
#custom-right-arrow-light,
#custom-left-arrow-light {
	color: #{{base01-hex}};
	background: #{{base04-hex}};
}

#workspaces,
#clock.1,
#clock.2,
#clock.3,
#wireplumber,
#memory,
#cpu,
#disk,
#tray {
	background: #{{base04-hex}};
}

#workspaces button {
	padding: 0 2px;
	color: #{{base05-hex}};
}
#workspaces button.active {
	color: #{{base06-hex}};
}
#workspaces button:hover {
	box-shadow: inherit;
	text-shadow: inherit;
}
#workspaces button:hover {
	background: #{{base05-hex}};
	border: #{{base05-hex}};
	padding: 0 3px;
}

#wireplumber {
  color: #{{base08-hex}};
}
#memory {
	color: #{{base09-hex}};
}
#cpu {
	color: #{{base0A-hex}};
}
#disk {
	color: #{{base0B-hex}};
}

#clock,
#wireplumber,
#memory,
#cpu,
#disk {
	padding: 0 10px;
}
